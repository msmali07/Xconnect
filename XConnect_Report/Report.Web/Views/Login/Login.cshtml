@using Report.Web;
@using ReportViewerForMvc;
@using Report.BLL;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/Css/bootstrap.css" rel="stylesheet">
    <link href="~/Css/bootstrap-slider.css" rel="stylesheet">
    <link href="~/css/jquery-ui-1.12.1.css" rel="stylesheet" />
    <script src="~/libs/angular-1.6.6/angular.min.js"></script>
    <script src="~/libs/jquery-3.2.1.min.js"></script>
    <script src="~/libs/jquery-ui-1.12.1.js"></script>
    <script src="~/libs/bootstap-3.3.7.min.js"></script>
    <script src="~/Scripts/Login.js?v2"></script>
   
       
   <style type="text/css">
       .modal-content {
    -webkit-box-shadow: 0 5px 15px rgb(0 0 0 / 50%)!important;
    box-shadow: 0 5px 15px hsl(0deg 0% 0% / 88%) !important;
    border: 1px solid rgb(0 0 0 / 78%) !important;
}
       .modal-backdrop {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1040;
    background-color: #1c191961;
}
   </style>
</head>

<body style="background-color:#ffffff">
    <input type="hidden" id="hdnparentsitename" value="" />
    <input type="hidden" id="hdnerror" value="@TempData["Error"]" />

    <div class="row" style="display:none;">

        <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12 subloginbg">



            <div class="main-form">

                <form class="login-form ng-scope ng-dirty ng-valid-parse ng-valid ng-valid-required" ng-controller="validateCtrl" name="myForm" method="post" action="~/Login/Login" novalidate="novalidate">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding loghead">

                        <h3 class="text-center">LOGIN</h3>



                    </div>


                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 padd-lft20 padd-rgt20 padd-btm20 tab-content">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding">
                            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding">
                                <label>Username</label>

                                <input type="text" class="form-control usrnm" id="Username" name="Username" placeholder="Enter Username" required="" ng-model="Username">

                            </div>
                            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding">

                                <label>Password</label>
                                <input type="password" class="form-control pwd mrg-btm15" id="Password" name="Password" placeholder="Enter Password" required="" ng-model="Password">

                            </div>


                            <div class="logbtn center-block text-center">
                                <button type="submit" id="btnLogin" class="btn submit-btn hfbtn center-block text-center" name="Login" ng-disabled="!(myForm.$valid)" onclick="return validation();">SIGN IN</button>
                            </div>


                        </div>




                    </div>

                </form>
            </div>


        </div>
    </div>


 <div class="modal fade" id="session" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-md">
            <!-- Modal content-->
            <div class="modal-content modal-md" >

               
                <div class="modal-body" style="padding:0px !important;" >

                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding" style="margin-left:23%">
                       <h3 class="mrg-lft10">Oops ! Session Timeout ! <br /></h3>
                        <img src="~/images/timeout.png" width="50%" height="60%" />
                        
                    </div>
                    <div  class="col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding" style="margin-bottom:15px;"  >
                    <span style="margin-left:16%;">Your Session has expired,To get Back in, Just Login again. </span>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 nopadding" style="margin-left:65px !important;">
                        @*<button id="btnrelogin" class="btn search hover-btn" style="width:100%;background-color: #110e0e3b !important;" title="Click here to Login" onclick='RedirectToParent();'  ><b>Login</b>  </button>*@
                        </div>

                    </div>
            </div>
        </div>
    </div> 
    <div class="modal fade" id="error" role="dialog" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-md">
            <!-- Modal content-->
            <div class="modal-content modal-md">
                <div class="modal-header" style="padding-bottom:0px;">
                    <h4 class="nomargin" >                        
                            <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>&nbsp;&nbsp;Error
                    </h4>
                </div>
               

                <div class="modal-body " style="padding:0px !important;">

                   
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding" style="margin-bottom:15px;margin-top:15px !important;">
                        <h4 style="margin-left:5%;font-size:15px;font-weight: 400;">There is some problem on Connecting to Report Portal, Please Contact Administrator. </h4>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12 nopadding" style="margin-left:65px !important;">
                        @*<button id="btnrelogin" class="btn search hover-btn" style="width:100%;background-color: #110e0e3b !important;" title="Click here to Login" onclick='RedirectToParent();'><b>Login</b>  </button>*@
                    </div>

                </div>
            </div>
        </div>
    </div> 
</body>
</html>
