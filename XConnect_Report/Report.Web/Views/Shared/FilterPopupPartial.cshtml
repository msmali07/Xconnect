<div class="modal fade" id="MailDiv" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content modal-lg" style="">

            <div class="modal-header padd-10">
                <h4 class="nomargin">
                   Report Mail
                </h4>
            </div>
            <div class="filter modal-body mrg-btm25" >
                
                    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mrg-top20">
                            <input class="floating-inpt" type="text" required id="txtmailfrom"  maxlength="100" />
                            <span class="floating-label" for="Address"> Mail From <span class="red-color">*</span> </span>
                        </div>

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mrg-top20">

                            <input class="floating-inpt" type="text" required id="txtmailto" maxlength="100" />
                            <span class="floating-label" for="Address"> Mail To <span class="red-color">*</span> </span>

                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mrg-top20">

                            <input class="floating-inpt" type="text" required id="txtmailcc" maxlength="100" />
                            <span class="floating-label" for="Address"> Cc  </span>

                        </div>


                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mrg-top20">

                            <input class="floating-inpt" type="text" required id="txtmailsubject"  maxlength="500" />
                            <span class="floating-label" for="Address"> Mail Subject <span class="red-color">*</span> </span>

                        </div>

                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">
                        <span class="browse-txt" style="font-size: 12px;font-style:italic;padding-left:10px">(Please use "," for sending the email with multiple emailid's in To and Cc.)</span>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-6 col-xs-12">

                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 mrg-top20">

                            <span top="0px !important" for="Address"> Attachment &nbsp;&nbsp; <img src="../images/attch.gif" alt=""></span>
                            <a style="font-style: italic;text-decoration: underline !important;
                            color: #337ab7;" href="#" data-toggle="tooltip" id="_Attachment"></a>

                        </div>

                    </div>
               
                
            </div>
            <div class="modal-footer mrg-top10">
                <button id="btnYes" ng-click="MailReport()" class="btn hover-btn"> Send </button>
                <button id="btnLogOut" data-dismiss="modal" class="btn hover-btn"> Cancel </button>
               

            </div>
        </div>
    </div>
</div>

