<div class="modal fade" id="Sortcoldiv" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-md">
        <!-- Modal content-->
        <div class="modal-content modal-md" style="min-width: 400px;">

            <div class="modal-header padd-10">
                <h4 class="nomargin">
                    Sort
                </h4>
            </div>
            <div class="filter modal-body" style="min-height: 325px;overflow-x:hidden;width:99%;">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 nopadding">

                    <table class="table hsrrrtbl mbkngtable mbktbl tbl-block-responsive-xs">
                        <thead>
                            <tr>
                                <th style="background-color: #fff;">Column</th>
                                <th style="background-color: #fff;"></th>
                                <th style="background-color: #fff;">Order</th>
                                <th style="background-color: #fff;"></th>

                            </tr>

                        </thead>
                        <tbody>
                            <tr ng-repeat="s in SortDetails">
                                <td>
                                    <span ng-show="$first">Sort by</span><span ng-show="!$first">Then by</span>
                                </td>
                                <td>

                                    <select class="select--hoshi mrg-btm0 " id="sortcolunm_{{s.SrNo}}"  >
                                        <option ng-selected="s.Column == '0'" value="0">Select column</option>
                                        <option value="{{l}}" ng-repeat="l in SortColList">
                                            {{l.split('~')[2]}}
                                        </option>
                                    </select>
                                </td>
                                <td>

                                    <select class="select--hoshi mrg-btm0" id="sortorder_{{s.SrNo}}"  >
                                        <option value="asc">Ascending </option>
                                        <option value="desc">Descending </option>

                                    </select>
                                </td>
                                <td>
                                    <i class="fa fa-plus-square mrg-top40" aria-hidden="true" style="font-size: 17px;" ng-show="$last" ng-click="addMoreLevel(s.SrNo);"> </i>
                                    <i class="fa fa-minus-square mrg-top40" aria-hidden="true" style="font-size: 17px;" ng-show="(SortDetails.length > 1)" ng-click="deleteLevel(s.SrNo);"> </i>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 mrg-top05" ng-show="TopDivShow == true">
                       
                            <span class="floating-label-select" > Show :  </span>
                           <select class="select--hoshi"  id="ddltopdatawithsort">
                              
                                <option value="0">All</option>
                                
                                <option value="10">10</option>
                              
                                <option value="15">15</option>
                               
                                <option value="25">25</option>
                               
                                <option value="50">50</option>
                               
                            </select>
                        
                    </div>



                </div>
            </div>
            <div class="modal-footer">
                <button id="btnYes" ng-click="ApplySorting();" class="btn hover-btn"> Apply </button>
                <button id="btnYes" ng-click="ClearSorting();" class="btn hover-btn"> Clear </button>
                <button id="btnLogOut" data-dismiss="modal" class="btn hover-btn"> Cancel </button>


            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $('.dropdown.keep-open').on({
        "shown.bs.dropdown": function () { this.closable = false; },
        "click": function () { this.closable = true; },
        "hide.bs.dropdown": function () { return this.closable; }
    });
</script>



